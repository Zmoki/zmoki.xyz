---
import BaseLayout from "./BaseLayout.astro";
import Time from "../components/Time.astro";

const { title, description, contentModifiedDate: contentModifiedDateRaw } = Astro.props;

// Convert string to Date if needed
const contentModifiedDate =
  typeof contentModifiedDateRaw === "string"
    ? new Date(contentModifiedDateRaw)
    : contentModifiedDateRaw;
---

<BaseLayout title={title} description={description}>
  <section class="space-y-4">
    <header
      class="flex flex-col gap-6 rounded-xl bg-white px-4 py-8 shadow-sm md:items-center md:p-16 md:text-center lg:p-20"
    >
      <h1 class="text-5xl font-semibold lg:text-6xl">
        {title}
      </h1>
      {description && <p class="text-2xl md:text-3xl">{description}</p>}
      <p
        class="order-first flex flex-col gap-2 font-mono text-xs uppercase tracking-normal opacity-70 md:flex-row lg:gap-4 lg:text-sm"
      >
        Updated <Time datetime={contentModifiedDate} />
      </p>
    </header>
    <section
      class="prose prose-headings:font-semibold [&_a]:text-myblue-500 max-w-none rounded-xl bg-white px-4 py-8 shadow-sm md:p-16 lg:px-28 lg:py-16"
    >
      <slot />
    </section>
  </section>
</BaseLayout>
