---
import BaseLayout from "./BaseLayout.astro";
import { Time } from "@zmoki/shared-components";

const { title, description, contentModifiedDate: contentModifiedDateRaw } = Astro.props;

// Convert string to Date if needed
const contentModifiedDate =
  typeof contentModifiedDateRaw === "string"
    ? new Date(contentModifiedDateRaw)
    : contentModifiedDateRaw;
---

<BaseLayout title={title} description={description}>
  <section class="mx-auto max-w-4xl px-6 py-12">
    <header class="mb-12">
      <h1 class="mb-4 font-serif text-4xl font-bold leading-tight md:text-5xl">
        {title}
      </h1>
      {description && <p class="mb-6 text-xl text-gray-600">{description}</p>}
      <p class="text-sm text-gray-500">
        Updated <Time datetime={contentModifiedDate} />
      </p>
    </header>
    <section class="prose prose-lg prose-headings:font-serif max-w-none">
      <slot />
    </section>
  </section>
</BaseLayout>
