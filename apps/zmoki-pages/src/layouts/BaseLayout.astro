---
export interface Props {
  title: string;
  description?: string;
}

import { Image } from "astro:assets";
import Avatar from "../images/zmoki.jpg";

const { title, description = "A digital garden of ideas, art, and research" } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <link rel="canonical" href={canonicalURL.toString()} />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@300;400;500;600;700&family=Noto+Serif:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body
    class="text-myblue-900 hover:[&_a]:bg-myblue-500 hover:[&_a]:outline-solid hover:[&_a]:outline-myblue-500 min-h-full bg-slate-50 font-sans text-xl leading-tight tracking-tight [&_a]:no-underline [&_a]:transition-all [&_a]:duration-200 hover:[&_a]:text-white hover:[&_a]:outline"
  >
    <div
      class="w-full gap-4 py-8 pl-4 pr-8 lg:grid lg:max-h-screen lg:grid-cols-[30%_70%] lg:grid-rows-3"
    >
      <!-- Header -->
      <header
        class="rounded-xl bg-white bg-[url(/zmoki.jpg)] bg-cover bg-center px-6 py-4 tracking-tighter shadow-sm"
      >
        <a href="/">zmoki.xyz</a>
      </header>

      <!-- Main Content -->
      <main class="overflow-y-scroll rounded-xl pr-4 lg:row-span-3 lg:max-h-max">
        <slot />
      </main>

      <aside
        class="bg-myorange-500 flex flex-col gap-2 rounded-xl px-6 pb-10 pt-8 tracking-tighter shadow-sm"
      >
        <h2 class="flex-1 pb-4 text-4xl font-medium">Contact</h2>
        <p><a href="mailto:hey@zmoki.xyz">hey@zmoki.xyz</a></p>
        <p>say hey!</p>
      </aside>

      <!-- Footer -->
      <footer
        class="self-end rounded-xl bg-white px-4 pb-4 pt-2 font-mono text-xs uppercase tracking-normal text-slate-500 shadow-sm"
      >
        <div class="my-2">
          <span>•</span>
          <a href="/legal/privacy/">Privacy Policy</a>
          <span>•</span>
          <a href="/legal/terms/">Terms of Service</a>

          <span>•</span>
        </div>
        <p>&copy; zmoki.xyz 2025</p>
      </footer>
    </div>
  </body>
</html>
