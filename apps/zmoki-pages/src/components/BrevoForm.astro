---
export interface Props {
  brevoFormId: string;
  title: string;
  description: string;
  buttonText?: string;
  successMessage?: string;
  failureMessage?: string;
}

const defaultSuccessMessage = "Your subscription has been successful.";
const defaultFailureMessage = "Your subscription could not be saved. Please try again.";
const defaultButtonText = "Subscribe";
const { brevoFormId, title, description, buttonText = defaultButtonText, successMessage = defaultSuccessMessage, failureMessage = defaultFailureMessage } = Astro.props;
---

{
  /* src/components/BrevoForm.astro
  A self-contained, Tailwind-styled component for a Brevo sign-up form.
*/
}
<script is:inline>
  window.REQUIRED_CODE_ERROR_MESSAGE = "Please choose a country code";
  window.LOCALE = "en";
  window.EMAIL_INVALID_MESSAGE = window.SMS_INVALID_MESSAGE =
    "The information provided is invalid. Please review the field format and try again.";
  window.REQUIRED_ERROR_MESSAGE = "This field cannot be left blank. ";
  window.GENERIC_INVALID_MESSAGE =
    "The information provided is invalid. Please review the field format and try again.";
</script>

<div class="w-full bg-slate-50 px-4 py-12">
  <div class="mx-auto flex max-w-lg flex-col items-center">
    {/* Brevo's Success/Error Messages (styled with Tailwind) */}
    <div
      id="error-message"
      class="sib-form-message-panel mb-4 hidden w-full rounded-lg border border-red-400 bg-red-100 px-4 py-3 text-red-700"
    >
      <div class="flex items-center">
        <span class="sib-form-message-panel__inner-text">{failureMessage}</span>
      </div>
    </div>

    <div
      id="success-message"
      class="sib-form-message-panel mb-4 hidden w-full rounded-lg border border-green-400 bg-green-100 px-4 py-3 text-green-700"
    >
      <div class="flex items-center">
        <span class="sib-form-message-panel__inner-text">{successMessage}</span>
      </div>
    </div>

    {/* The Main Form Card */}
    <div
      id="sib-container"
      class="w-full rounded-lg border border-slate-200 bg-white p-6 shadow-md sm:p-8"
    >
      <form
        id="sib-form"
        method="POST"
        action={`https://${import.meta.env.PUBLIC_BREVO_ACCOUNT_ID}.sibforms.com/serve/${brevoFormId}`}
        data-type="subscription"
        class="space-y-6"
      >
        {/* Form Title and Description */}
        <div>
          <h2 class="text-2xl font-bold text-slate-900 sm:text-3xl">{title}</h2>
          <p class="mt-3 text-slate-600">{description}</p>
        </div>

        {/* Email Input */}
        <div>
          <label for="EMAIL" class="mb-2 block text-sm font-bold text-slate-700">Email</label>
          <div class="form__entry entry_block">
            <input
              type="text"
              class="input w-full rounded-md border border-slate-300 px-3 py-2 placeholder-slate-400 shadow-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
              id="EMAIL"
              name="EMAIL"
              autocomplete="email"
              placeholder="you@example.com"
              data-required="true"
              required
            />
          </div>
        </div>

        {/* Turnstile Captcha */}
        {import.meta.env.PROD && (
        <div class="sib-captcha my-4">
          <div class="form__entry entry_block">
            <script is:inline>
              function handleCaptchaResponse() {
                var event = new Event("captchaChange");
                document.getElementById("sib-captcha").dispatchEvent(event);
                window.grecaptcha = window.turnstile;
              }
            </script>
            <div
              class="cf-turnstile g-recaptcha"
              data-sitekey={import.meta.env.PUBLIC_CLOUDFLARE_TURNSTILE_SITE_KEY}
              id="sib-captcha"
              data-callback="handleCaptchaResponse"
              data-language="en"
            >
            </div>
            </div>
          </div>
        )}

        {/* Submit Button */}
        <div>
          <button
            class="sib-form-block__button sib-form-block__button-with-loader bg-accent-light hover:bg-accent-light/80 w-full rounded-md px-4 py-3 font-bold text-white shadow-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2"
            form="sib-form"
            type="submit"
          >
            {buttonText}
          </button>
        </div>

        {/* Hidden Inputs */}
        <input type="text" name="email_address_check" value="" class="input--hidden" />
        <input type="hidden" name="locale" value="en" />
      </form>
    </div>
  </div>
</div>

<script defer src="https://sibforms.com/forms/end-form/build/main.js"></script>
<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
