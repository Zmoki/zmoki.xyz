---
import { getCollection, type CollectionEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { Time } from "@zmoki/shared-components";

export async function getStaticPaths() {
  const posts = await getCollection("feed");
  return posts.map((post: CollectionEntry<"feed">) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props as CollectionEntry<"feed">;
const { Content } = await post.render();
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <article>
    <!-- Post Header -->
    <header>
      <h1>
        {post.data.title}
      </h1>
      {post.data.description && <p>{post.data.description}</p>}
      <p>
        <Time datetime={post.data.publishDate} />
        {
          post.data.contentModifiedDate.getTime() > post.data.publishDate.getTime() && (
            <em>
              Updated <Time datetime={post.data.contentModifiedDate} />
            </em>
          )
        }
      </p>
    </header>

    <!-- Post Content -->
    <div>
      <Content />
    </div>

    <!-- About Author -->
    <aside>
      <h2>About the Author</h2>
      <p>
        I'm a frontend developer, artist, and neurodivergent researcher exploring the intersections
        of technology, creativity, and identity. This tech blog is part of my larger digital garden
        where I share insights about development and the human side of code.
      </p>
    </aside>
  </article>
</BaseLayout>
