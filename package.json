{
  "name": "zmoki-monorepo",
  "version": "0.0.2",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=zmoki-pages",
    "dev:tech": "npm run dev --workspace=tech-zmoki-pages",
    "build": "npm run build --workspace=zmoki-pages",
    "build:tech": "npm run build --workspace=tech-zmoki-pages",
    "preview": "npm run preview --workspace=zmoki-pages",
    "preview:tech": "npm run preview --workspace=tech-zmoki-pages",
    "clean": "npm run clean --workspaces",
    "install:all": "npm install",
    "build:all": "npm run build --workspaces"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14"
  }
}
