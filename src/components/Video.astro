---
import RawVideo from "./RawVideo.astro";

export interface Props {
  src: string;
  type?: string;
  poster?: string;
  width?: number;
  height?: number;
}

const hasText = Astro.slots.has("default");
---

{hasText ? (
<div class="grid gap-8 my-8 grid-cols-1 md:grid-cols-3">
  <div class="not-prose flex justify-start col-span-1">
    <RawVideo {...Astro.props} />
  </div>
  <div class="col-span-2">
      <slot />
  </div>
</div>
) : (
  <RawVideo {...Astro.props} />
)}