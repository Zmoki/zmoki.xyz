---
import RawVideo from "./RawVideo.astro";

export interface Props {
  src: string;
  type?: string;
  poster?: string;
  width?: number;
  height?: number;
}

const hasText = Astro.slots.has("default");
---

{
  hasText ? (
    <div class="grid grid-cols-[40%_60%]">
      <div class="not-prose">
        <RawVideo {...Astro.props} />
      </div>
      <div class="">
        <slot />
      </div>
    </div>
  ) : (
    <RawVideo {...Astro.props} />
  )
}
