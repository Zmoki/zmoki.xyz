---
export interface Props {
  src: string;
  type?: string;
  poster?: string;
  width?: number;
  height?: number;
}

const { src, type = 'video/mp4', poster, width, height } = Astro.props;
---
<video
  playsinline
  loop
  autoplay
  muted
  src={src}
  poster={poster}
  width={width}
  height={height}
  class="w-full h-auto rounded-lg shadow-lg"
>
  <source src={src} type={type} />
  Your browser does not support the video tag.
</video>