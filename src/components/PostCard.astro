---
export interface Props {
  slug: string;
  data: {
    title: string;
    description: string;
    publishDate: Date;
  };
}

const { data, slug } = Astro.props;
const { title, description, publishDate } = data;
---

<article class="group">
  <a href={`/feed/${slug}/`} class="block">
    <h3
      class="mb-2 font-serif text-xl font-semibold transition-colors group-hover:text-accent-light"
    >
      {title}
    </h3>
    {description && <p class="mb-3 text-gray-600">{description}</p>}
    <time class="text-sm text-gray-500" datetime={publishDate.toISOString()}>
      {
        publishDate.toLocaleDateString("en-US", {
          year: "numeric",
          month: "long",
          day: "numeric",
        })
      }
    </time>
  </a>
</article>
