---
export interface Props {
  slug: string;
  data: {
    title: string;
    description: string;
    publishDate: Date;
  }
}

const { data, slug } = Astro.props;
const { title, description, publishDate } = data;
---

<article class="group">
  <a
    href={`/feed/${slug}/`}
    class="block"
  >
    <h3 class="text-xl font-semibold mb-2 group-hover:text-accent-light transition-colors font-serif">
      {title}
    </h3>
    {description && (
      <p class="text-gray-600 mb-3">
        {description}
      </p>
    )}
    <time
      class="text-sm text-gray-500"
      datetime={publishDate.toISOString()}
    >
      {publishDate.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
    </time>
  </a>
</article>
